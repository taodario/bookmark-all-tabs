{
  "manifest_version": 3,
  "name": "Bookmark All Tabs",
  "version": "1.0",
  "description": "Bookmark all open tabs across all windows with a single click",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/bookmark-icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/bookmark-icon.png"
  }
} 